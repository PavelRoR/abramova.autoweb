section#prices
	.container
		h3.general-title-black 
			span Выберите свой пакет участия
		.packets
			.row
				.col-md-6.col-sm-6
					.packet.packet-1
						.packet-head
							h4.packet-head-title Модуль 1
						.packet-body
							h5.packet-body-title «Исцеление первичной клетки» 
								small 9 занятий + 3 занятия ответов на вопросы (практикумы)
							ul.packet-body-list
								li Биология сознания
								li Безопасность и выживание
								li Страхи и фобии
								li Эпигенетика
								li Травмы как память вторжения
								li Травмы при беременности
								li Самосаботаж и заболевания
								li Анатомия и метафизика
								li Инструменты исцеления
						.packet-footer
							p.cost.cost-full Стоимость:
								span= full_1
							if sale_1 && today_1
								p.cost.cost-sale Скидка:
									span#sale-1= sale_1
								p.cost.cost-today Стоимость сегодня:
									span#today-1= today_1
							a.button.packet-button.packet-button-1(href= link_1 target="-blank")#link-1 Выбрать
				.col-md-6.col-sm-6
					.packet.packet-2
						.packet-head
							h4.packet-head-title Модуль 2
						.packet-body
							h5.packet-body-title Модуль 2 включает в себя модуль 1
								small 21 занятие + 6 занятий вопросы на ответы (практикум)
							ul.packet-body-list
								li Женские заболевания 
								li Наши ткани, кости и суставы
								li Защитные системы организма
								li Кто еще живет в нашем теле?
								li Метафизика слуха и зрения
								li Системы нашего тела
								li Гормональная система и миссия души
								li Чистые сосуды, здоровое сердце
								li Внутренние органы, корни заболеваний
								li Костная система - жизненный стержень
								li Новообразования
								li Манифестация и интеграция здоровья
						.packet-footer
							p.cost.cost-full Стоимость:
								span= full_2
							if sale_2 && today_2
								p.cost.cost-sale Скидка:
									span#sale-2= sale_2
								p.cost.cost-today Стоимость сегодня:
									span#today-2= today_2
							a.button.packet-button.packet-button-2(href= link_2  target="-blank")#link-2 Выбрать
		if prep_bonus && prep_cred && prep_link
			.prepayment
				h4.prepaymant-title Акция!!!
				p.prepayment-text Платите 1 000р., бонусом получаете 
					span#prepayment_bonus= prep_bonus 
					br
					| На счет зачисляется 
					span#prepayment-credited= prep_cred
				a.button.prepayment-button(href= prep_link target="_blank")#prepayment-link Оплатить 1 000р.