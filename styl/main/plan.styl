#plan
	padding 80px 0 100px
.day-about
	border-radius: 15px
	padding 170px 10px 50px
	border: 3px solid
	position relative
	margin-top: 135px
	width 100%
	max-width 304px
	&:before
		content: ''
		position: absolute
		left 0
		right 0
		bottom: -10px
		margin 0 auto
		background-color #fff
		height 19px
		width 110px
		background-repeat no-repeat
		background-position: center
.day-about-1
	border-color: #FFBF6E
	margin-bottom: 70px
	&:before
		background-image url(../img/plan_dna_1.png)
.day-about-2
	border-color: #0091B3
	float: right 
	margin-bottom: 70px
	&:before
		background-image url(../img/plan_dna_2.png)
.day-about-3
	border-color: #FFBF6E
.day-about-img
	position: absolute
	width 269px
	height 269px
	background-repeat no-repeat
	background-position: center
	background-size contain
	top -135px
	left 0
	right 0
	margin 0 auto
.day-about-img-1
	background-image url(../img/day_img_1.png)
.day-about-img-2
	background-image url(../img/day_img_2.png)
.day-about-img-3
	background-image url(../img/day_img_3.png)
.day-about-title
	font-size: 30px
	font-family: 'RussoOne', sans-serif
	color: #fff
	position: absolute
	top -125px
	left 0
	right 0
	margin 0 auto
	text-align: center
.day-info
	padding-left: 20px
	padding-top: 125px
	margin-bottom: 70px
.day-info-2
	padding-left: 0
	padding-right: 20px
.day-info-3
	margin-bottom: 0
.day-info-title
	font-size: 30px
	font-family: 'RussoOne', sans-serif
	margin-bottom: 20px
	color: initial
.day-about-subtitle
	text-align: center
	font-size: 24px
	font-family: 'RussoOne', sans-serif
	margin-bottom: 20px
.day-about-bq
	font-size: 16px
	font-family: 'OpenSansItalic', sans-serif
	margin-bottom: 20px
	text-align: justify
.day-about-bonus
	text-align: center
	font-size: 16px
	font-family: 'OpenSansBold', sans-serif
	margin-bottom: 20px
.day-about-text
	font-size: 16px
	text-align: justify
.day-info-text
	margin-bottom: 30px
.day-info-text-bold
	font-family: 'OpenSansBold', sans-serif
.day-info-list
	li
		list-style: none
		text-indent: 20px
		position relative
		margin-bottom: 20px
		&:before
			content:  ''
			display block
			position: absolute
			width 4px
			height 4px
			left 0
			top 13px
			background-color: #282016
			border-radius: 5px