@media screen and (min-width 1900px)
	#main
		padding 100px 0
		background-position: center top -200px
@media screen and (min-width 2295px)
	body
		font-size: 20px
	.container
		width 1400px
	#main
		background-position: center top -300px
@media screen and (max-width 767px)
	#main
		text-align: center
	.button-materials
		margin-bottom: 25px
	.pre-main
		border-radius: 15px
		height auto
		padding 10px 40px 10px 10px
		border 2px solid #f2f2f2;
		border-radius: 15px
		background-image url("../img/title_dna.png")
		background-repeat no-repeat
		background-position: right 10px center
		background-size 20px
		line-height: 1.5
		&:after
			content: none
		p
			line-height: inherit
			border: 0
			text-align: center
			padding 0
			height auto
			position: static
	.main-author
		border: 2px solid #f2f2f2;
		border-radius: 15px
		background-image none
		position relative
		padding 10px
		display: table
		line-height: 2
		background-image: url("../img/title_dna.png");
		background-repeat no-repeat
		background-position: left 10px center
		background-size 20px
@media screen and (max-width 485px)
	#main
	#second
		padding 40px 0
	#main
		background-position: center top
	.pre-main
		font-size: 18px
		margin-bottom: 20px
	.main-title
		font-size: 32px
		small
			font-size: 28px
	.main-date
		font-size: 22px
		margin-top: 30px
	.main-author
		font-size: 22px
		margin-top: 30px
		padding 10px 25px
		line-height: 1.3;
	.second-text
		font-size: 18px
	footer
		padding: 15px 0
		font-size: 12px
	.soc-buttons
		margin-top: 15px
	.soc-buttons-link
		width 50%
		margin-top: 0
	.bonus-name
		margin: 0 0 15px
@media screen and (max-width 385px)
	#main
	#second
		padding 30px 0
	.main-title
		font-size: 28px
		small
			font-size: 24px
	.main-date
		font-size: 20px
		margin-top: 20px
	.materials
		margin-bottom: 30px
	.button-form
		height: auto;
		line-height: 1.3;
		padding: 10px;