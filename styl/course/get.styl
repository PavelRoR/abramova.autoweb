#get
	padding 60px 0
.text-decorated
	margin: 60px 0 80px
	padding 25px 130px 25px 25px
	font-size: 20px
	border: 7px solid #FFBF6E
	border-radius: 40px
	position relative
	span
		font-family: "OpenSansBold", sans-serif
	&:before
		content: ''
		position: absolute
		display block
		width 86px
		height 240px
		background-color #fff
		background-image url(../img/second_dna.jpg)
		background-repeat no-repeat
		background-position: center
		top -7px
		right 40px
.get-text
	margin-bottom: 20px
	span
		font-family: 'OpenSansBold', sans-serif
	&:last-of-type
		margin-bottom: 0
.title-decorated
	font-size: 24px;
	font-family: "RussoOne", sans-serif
	position relative
	border: 3px solid
	border-radius: 15px
	line-height: 50px
	padding 0 20px 0 100px
	width 100%
	max-width 615px
	margin 0 auto 80px
	text-align: center
	&:before
		content: ''
		position: absolute
		display block
		width 83px
		height 70px
		background-image url('../img/title_decorated_dna.jpg')
		background-repeat no-repeat
		background-position: center
		background-size contain
		top -10px
		left 30px
.reach-list
	li
		list-style none
		background-image url(../img/check.png)
		background-repeat no-repeat
		background-position: left top
		background-size: 25px
		padding-left: 35px
		margin-bottom: 20px
.button-get
	margin 40px auto 0