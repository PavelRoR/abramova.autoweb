@media screen and (min-width 1900px)
	#main
		padding 100px 0
		background-position: center top -200px
@media screen and (min-width 2295px)
	#main
		background-position: center top -260px
	body
		font-size: 20px
	.container
		width 1400px
	.text-decorated
		padding-right: 150px
		&:before
			top -23px
	.modules-container-days-title
		font-size: 22px
@media screen and (max-width 1199px)
	.text-decorated
		padding-right: 150px
		&:before
			top: 25px;
			right: 26px;
@media screen and (max-width 991px)
	header
		padding 15px 0
	#logo
		float: none
		margin 0 auto 5px
		display block
	.contacts
		text-align: center
		float: none
	.contact
		display: inline-block
		margin 5px 5px 0
	#main
		background-position: center
	.author-title
		line-height: 1.5
		padding 10px 57px 10px 125px
		&:before
			height 113px
			background-color: #1b1b1b
	.author-img
		width 260px
		height 260px
@media screen and (max-width 767px)
	#main
		text-align: center
	.button-main
		margin 40px auto 0
	.pre
		margin 0 auto 40px
	.main-author
		margin 30px auto 0
	.changes-text
		margin 0 auto 25px
		padding-left: 80px
	.packet::before
		top -150px
	.packet-2
		margin-top: 180px
	.author-title::before
		height 74px
	.author-img-desktop
		display: none
	.author-img-mobile
		display block
		margin-left: 0
	.certs-title
		margin-top: 30px
	#certs-slider
		width 300px
		margin 0 auto
	#text-revs
		margin-top: 60px
	.text-decorated
		padding 25px 40px
		text-align: center
		&:before
			content: none
@media screen and (max-width 650px)
	.title-decorated
	.author-title
	.general-title-black
		position relative
		padding 10px
		display: table
		line-height: 2
		&:before
		span
			position: static
			display: table-cell
			vertical-align: middle
	.main-author
		border: 2px solid #f2f2f2;
		border-radius: 15px
		background-image none
		position relative
		padding 10px
		display: table
		line-height: 2
		&:before
			content: '';
			display: table-cell
			position: static
			vertical-align: middle
			background-image: url("../img/title_dna.png");
			background-repeat: no-repeat;
			background-position: center;
			-webkit-background-size: 100% 100%;
			background-size: 100% 100%;
			width: 31px;
			height: 53px;
@media screen and (max-width 485px)
	header
		padding: 10px 0
	#logo
		width 160px
		margin-bottom: 0
	.contacts
		line-height: 15px
	.contact
		font-size: 14px
	#main
	#get, #prices, #revs
	#changes, #for
	#janna-talks
	#plan
	#author
	#last
		padding 40px 0
	.pre
		margin-bottom: 20px
		font-size: 20px
	.main-title
		font-size: 36px
		small
			font-size: 26px
	.main-author
		margin-top: 35px
		font-size: 20px
		line-height: 1.6
		&:before
			width: 16px;
			height: 33px;
			background-size contain
	.text-decorated
		padding 15px 20px
		margin 30px 0 40px
	.title-decorated
	.author-title
	.general-title-black
		line-height: 1.3
		&:before
			width: 40px;
			height: 33px;
	.title-decorated
		margin-bottom: 30px
	.button-get
		margin-top: 30px
	.changes-text
		padding 0 0 0 35px
		max-width 100%
		background-size: 25px
		margin-bottom: 25px
	.author-title
		text-align: center
	.last-container
		padding 30px 20px
	.button-last
		margin-top: 25px
	footer
		padding 15px 0
		h5
			font-size: 18px
	.soc_buttons a
		margin 10px 5px
	footer #conditions, footer p
		font-size: 12px
		line-height: 1.2
	.text-revs-link
		height 220px
@media screen and (max-width 380px)
	.main-title
		font-size: 30px
		line-height: 1.3
		small
			font-size: 24px
	.author-title, .title-decorated,.second-title
	.day-about-subtitle
	.general-title-black
		font-size: 22px
	.author-list li
		font-size: 18px
		margin-bottom: 10px
	#certs-slider
		width 250px
	.cert-img
		height 150px !important
	.author-img-mobile
		width 215px
		height 215px
	.last-container
		padding 20px 15px
	.button-main
		line-height: 1.2
		padding 10px 0
	.button-last
		line-height: 50px
		margin-top: 20px
	.pre
		font-size: 18px
		p
			border-right: 2px solid #f2f2f2
			border-radius 15px
			padding 0 10px
		&:after
			content: none
	.text-decorated
	.janna-talks-text
		font-size: 18px
		padding 15px
		text-align: justify
	.reach-list li
	.changes-text
		margin-bottom: 10px
	.changes-aftertext
		font-size: 18px
	.packet::before
		width 230px
		height 230px
		background-size contain
		top -115px
	.packet-head-title
		font-size: 20px
		top -240px
	.packet
		padding-top: 130px
	.course-plan-container
		padding 15px
	.modules-days-list
		margin-left: 5px
	.text-revs-link
		height 150px
	.last-container-title
		font-size: 26px
		margin-bottom: 20px
	.button-last
		font-size: 16px
		box-shadow: none