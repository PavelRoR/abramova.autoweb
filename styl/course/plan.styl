#plan
	padding 60px 0
#course-plan
	width 100%
	max-width 800px
	margin: 0 auto
.course-plan-buttons
	text-align: center
	width 100%
	li
		display: inline-block
		margin 0 5px 15px
		a
			display block
			width 140px
			line-height: 45px
			color: #0091b3
			border: 1px solid #0091b3
			font-size: 20px
			text-decoration: none
			border-radius: 10px
			transition: all .4s ease
		&.ui-tabs-active.ui-state-active
		&.ui-state-hover
			a
				font-family: "OpenSansBold", sans-serif
				color: #fff
				background-color: #0091b3
				text-decoration: none
				box-shadow: 0px 3px 12px 1px rgba(0, 0, 0, 0.15);
.course-plan-container
	border-radius: 15px
	padding 20px
	border: 2px solid #0091b3
	box-shadow: 0px 3px 12px 1px rgba(0, 0, 0, 0.25);
.plan-module-title
	font-size: 20px
	font-family: "RussoOne",sans-serif
	text-align: center
	margin-bottom: 25px
	small
		font-family: "OpenSansBold", sans-serif
		display block
.modules-days-buttons
	text-align: center
	width 100%
	li
		display: inline-block
		margin 0 5px 15px
		a
			display block
			width 90px
			line-height: 30px
			color: #000
			border: 1px solid #ffbe72
			font-size: 16px
			text-decoration: none
			border-radius: 10px
			transition: all .4s ease
		&.ui-tabs-active.ui-state-active
		&.ui-state-hover
			a
				color: #000
				background-color: #ffbe72
				text-decoration: none
				box-shadow: 0px 3px 12px 1px rgba(0, 0, 0, 0.15);
.modules-container-days-title
	font-family: "OpenSansBold", sans-serif
	margin-bottom: 15px
	font-size: 18px
	span
		display block
		font-family: "OpenSansItalic", sans-serif
.modules-days-list
	margin-left: 20px
	li
		padding-left: 15px
		position relative
		margin-bottom: 10px
		list-style none
		&:last-child
			margin-bottom: 0
		&:before
			content: '';
			display: block;
			position: absolute;
			width: 4px;
			height: 4px;
			left: 0;
			top: 13px;
			background-color: #282016;
			border-radius: 5px;
.plan-button
	margin 40px auto 0