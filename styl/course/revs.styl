.carousel-control
	top auto
	bottom: -20px
	width 40px
	height 40px
	background-image none
	border-radius: 15px
	color #000
	background-color: #ffbf6e
	line-height: 40px
	text-align: center
	text-shadow: none
	font-family: "RussoOne", sans-serif;
	&.left
	&.right
		padding 0
		background-image: none
		opacity 1
		transition: all .3s ease
	&:focus
	&:hover
		color #000
	&:hover
		opacity .8