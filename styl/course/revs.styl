#revs
	@extends #get

#video-revs
#text-revs
	width 100%
	max-width 650px
	margin 0 auto
	.carousel-inner
		box-shadow: 0px 3px 12px 2px rgba(0, 0, 0, 0.15);
		.item
			padding 0 
			margin 0 auto
.carousel-indicators
	position: static
	li
		background-color: transparent
		border: 1px solid #000
		margin 2px
		width 8px
		height 8px
		transition: all .4s ease
	.active
		width 8px
		height 8px
		background-color: #000
		border: 1px solid #000
		margin: 2px
.text-revs-link
	height 311px
	display block
	img
		object-fit: contain
		object-position: center
		height 100% !important
