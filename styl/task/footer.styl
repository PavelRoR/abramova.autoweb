footer
	padding 20px 0
	text-align: center
	font-size: 14px
	h5
		font-size: 20px
		font-family: OSB
#conditions
	text-decoration underline
	&:hover
	&:focus
		text-decoration none
.soc-buttons
	width 100%
	margin: 0 auto
	a
		display: inline-block
		margin: 10px 8px
		position relative
		z-index: 1
		.fa
			width: 30px;
			height: 30px;
			background-color #0091b3
			color #fff
			line-height 30px
			border-radius: 2px
			&:hover
				opacity .8